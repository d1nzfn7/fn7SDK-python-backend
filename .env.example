# Firebase Configuration
# Option 1: Path to Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/service-account.json

# Option 2: Firebase service account JSON as a string (alternative to PATH)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"..."}

# Optional: Firebase Storage bucket name for storage operations
FIREBASE_STORAGE_BUCKET=your-storage-bucket.appspot.com

# Server Configuration
PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
